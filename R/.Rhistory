# Load necessary libraries
library(dplyr)
library(ggplot2)
# 1. Read the CSV file
sales_data <- read.csv("sales_data.csv")
# 2. Total sales per category
sales_by_category <- sales_data %>%
group_by(category) %>%
summarise(total_sales = sum(sales))
print(sales_by_category)
# 3. Month with highest sales
highest_sales_month <- sales_data %>%
group_by(month) %>%
summarise(total_sales = sum(sales)) %>%
arrange(desc(total_sales)) %>%
slice(1)  # Takes the top row
print(highest_sales_month)
# 4. Bar plot of sales by category
ggplot(sales_by_category, aes(x = category, y = total_sales, fill = category)) +
geom_bar(stat = "identity") +
labs(title = "Total Sales by Category", x = "Category", y = "Total Sales") +
theme_minimal()
